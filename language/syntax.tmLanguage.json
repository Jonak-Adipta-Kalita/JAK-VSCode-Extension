{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "jonak",
    "scopeName": "source.jonak",
    "fileTypes": ["jonak"],
    "patterns": [
        { "include": "#comments" },
        { "include": "#functions" },
        { "include": "#keywords" },
        { "include": "#strings" }
    ],
    "repository": {
        "comments": {
            "match": "#.*",
            "name": "comment.line"
        },
        "functions": {
            "match": "LEN|PRINT|APPEND",
            "name": "entity.name.function"
        },
        "keywords": {
            "match": "FUN|VAR|FOR|THEN|END|RETURN|TO",
            "name": "keyword.control"
        },
        "parameters": {
            "match": "",
            "name": "variable.parameter"
        },
        "strings": {
            "match": "\".*?\"|'.*?'",
            "name": "string"
        }
    }
}
