{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "jonak",
    "scopeName": "source.jonak",
    "fileTypes": ["jonak"],
    "patterns": [
        { "include": "#comments" },
        { "include": "#function_parameters" },
        { "include": "#variables_string" },
        { "include": "#variables_function" },
        { "include": "#strings" },
        { "include": "#integers" },
        { "include": "#functions" },
        { "include": "#keywords" }
    ],
    "repository": {
        "comments": {
            "match": "#.*",
            "name": "comment.line"
        },
        "functions": {
            "match": "LEN|PRINT|APPEND|RUN|IS_NUM|IS_STR|IS_LIST|IS_FUN|EXTEND|POP|PRINT_RET|INPUT|INPUT_INT|CLEAR|CLS",
            "name": "entity.name.function"
        },
        "keywords": {
            "match": "FUN|FOR|THEN|END|RETURN|TO|NULL|TRUE|FALSE|MATH_PI|VAR",
            "name": "keyword.control"
        },
        "strings": {
            "match": "\".*?\"|'.*?'",
            "name": "string"
        },
        "integers": {
            "match": "0-9",
            "name": "constant.numeric"
        },
        "variables_string": {
            "name": "keyword.control",
            "match": "\\bVAR\\s+?([A-Za-z]+)\\s+?\\=\\s+?(\".*?\"|'.*?')",
            "captures": {
                "1": {
                    "name": "variable"
                },
                "2": {
                    "patterns": [{ "include": "#strings" }]
                }
            }
        },
        "variables_function": {
            "name": "keyword.control",
            "match": "\\bVAR\\s+?([A-Za-z]+)\\s+?\\=\\s+?([A-Za-z_]+(\\([A-Za-z_,\\s]+\\)))",
            "captures": {
                "1": {
                    "name": "variable"
                },
                "2": {
                    "name": "entity.name.function"
                }
            }
        },
        "function_parameters": {
            "name": "entity.name.function",
            "match": "[A-Za-z_]+\\s+?\\(([A-Za-z_,\\s]+)\\)",
            "captures": {
                "1": {
                    "name": "variable.parameter"
                }
            }
        }
    }
}
