{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "jonak",
    "scopeName": "source.jonak",
    "fileTypes": ["jonak"],
    "patterns": [
        { "include": "#comments" },
        { "include": "#functions" },
        { "include": "#strings" }
    ],
    "repository": {
        "comments": {
            "name": "comment.line",
            "begin": "#",
            "end": "#",
            "captures": {
                "0": {
                    "name": "comment.line"
                }
            }
        },
        "functions": {
            "match": "FUN|FOR|VAR|LEN|THEN|END|RETURN|PRINT|APPEND|TO",
            "name": "entity.name.function"
        },
        "strings": {
            "match": "\".*\"|'.*'",
            "name": "string"
        }
    }
}
