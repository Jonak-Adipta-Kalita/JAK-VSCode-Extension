{
    "name": "jak-vscode-extension",
    "displayName": "jak-vscode-extension",
    "description": "A VSCode Extension made by JAK",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.46.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:jak-vscode-extension.openJAKWebsite",
        "onCommand:jak-vscode-extension.openJAKAPI",
        "onCommand:jak-vscode-extension.openJAKDiscordBot"
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "jak-vscode-extension.openJAKWebsite",
                "title": "Open JAK's Website"
            },
            {
                "command": "jak-vscode-extension.openJAKAPI",
                "title": "Open JAK's API"
            },
            {
                "command": "jak-vscode-extension.openJAKDiscordBot",
                "title": "Open JAK's Discord Bot Invite"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "yarn run package",
        "compile": "webpack --config ./build/node-extension.webpack.config.js",
        "watch": "webpack --watch --config ./build/node-extension.webpack.config.js",
        "package": "webpack --mode production --devtool hidden-source-map --config ./build/node-extension.webpack.config.js",
        "test-compile": "tsc -p ./",
        "test-watch": "tsc -watch -p ./",
        "pretest": "yarn run test-compile && yarn run lint",
        "lint": "eslint .",
        "lint:fix": "eslint --fix .",
        "test": "node ./out/test/runTest.js",
        "prettier": "prettier **/*.{js,ts,md}",
        "prettier:fix": "prettier --write **/*.{js,ts,md}",
        "prepare": "husky install"
    },
    "devDependencies": {
        "@types/glob": "^7.1.3",
        "@types/mocha": "^8.0.4",
        "@types/node": "^12.11.7",
        "@types/vscode": "^1.46.0",
        "@typescript-eslint/eslint-plugin": "^4.9.0",
        "@typescript-eslint/parser": "^4.9.0",
        "eslint": "^7.15.0",
        "glob": "^7.1.6",
        "mocha": "^8.1.3",
        "prettier": "2.3.2",
        "ts-loader": "^8.0.11",
        "typescript": "^4.1.2",
        "vscode-test": "^1.4.1",
        "webpack": "^5.10.0",
        "webpack-cli": "^4.2.0",
        "husky": "^6.0.0"
    }
}
