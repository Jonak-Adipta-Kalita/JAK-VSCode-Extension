{
    "name": "jak-vscode-extension",
    "author": "Jonak Adipta Kalita",
    "license": "MIT",
    "publisher": "JAKVSCodeExtension",
    "displayName": "JAK VSCode Extension",
    "description": "A VSCode Extension made by JAK",
    "icon": "media/logo.png",
    "version": "1.0.2",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Jonak-Adipta-Kalita/JAK-VSCode-Extension.git"
    },
    "engines": {
        "vscode": "^1.61.0"
    },
    "categories": [
        "Programming Languages",
        "Snippets",
        "Other"
    ],
    "activationEvents": [
        "onCommand:jak-vscode-extension.refreshExtension",
        "onView:jak-vscode-extension-sidebar"
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "jak-vscode-extension-sidebar",
                    "title": "JAK VSCode Extension",
                    "icon": "media/sidebar/logo.svg"
                }
            ]
        },
        "views": {
            "jak-vscode-extension-sidebar": [
                {
                    "type": "webview",
                    "id": "jak-vscode-extension-sidebar",
                    "name": "JAK VSCode Extension",
                    "icon": "media/sidebar/logo.svg",
                    "contextualTitle": "JAK VSCode Extension"
                }
            ]
        },
        "commands": [
            {
                "command": "jak-vscode-extension.refreshExtension",
                "title": "Refresh JAK VSCode Extension"
            }
        ],
        "languages": [
            {
                "id": "jonak",
                "extensions": [
                    ".jonak"
                ],
                "aliases": [
                    "Jonak",
                    "jonak"
                ],
                "filenames": [],
                "firstLine": "",
                "configuration": "./language/language-configuration.json",
                "icon": {
                    "light": "./media/logo.png",
                    "dark": "./media/logo.png"
                }
            }
        ],
        "snippets": [
            {
                "language": "jonak",
                "path": "./language/snippets.json"
            }
        ],
        "grammars": [
            {
                "language": "jonak",
                "scopeName": "source.jonak",
                "path": "./language/syntax.tmLanguage.json"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "yarn run package",
        "compile": "webpack --config ./build/node-extension.webpack.config.js",
        "watch": "concurrently \"rollup -c -w\" \"webpack --watch --config ./build/node-extension.webpack.config.js\"",
        "package": "webpack --mode production --devtool hidden-source-map --config ./build/node-extension.webpack.config.js",
        "test-compile": "tsc -p ./",
        "test-watch": "tsc -watch -p ./",
        "pretest": "yarn run test-compile && yarn run lint",
        "publish:vsce": "vsce publish",
        "lint": "eslint .",
        "lint:fix": "eslint --fix .",
        "test": "node ./out/test/runTest.js",
        "prettier": "prettier **/*.{ts,md,json}",
        "prettier:fix": "prettier --write **/*.{ts,md,json}",
        "format": "eslint --fix . && prettier --write **/*.{ts,md,json}",
        "check:version": "ncu",
        "prepare": "husky install"
    },
    "bugs": {
        "url": "https://github.com/Jonak-Adipta-Kalita/JAK-VSCode-Extension/issues"
    },
    "homepage": "https://github.com/Jonak-Adipta-Kalita/JAK-VSCode-Extension#readme",
    "devDependencies": {
        "@rollup/plugin-commonjs": "^17.0.0",
        "@rollup/plugin-node-resolve": "^11.0.1",
        "@rollup/plugin-typescript": "^8.1.0",
        "@tsconfig/svelte": "^1.0.10",
        "@types/glob": "^7.2.0",
        "@types/mocha": "^9.0.0",
        "@types/node": "^18.7.23",
        "@types/vscode": "^1.61.0",
        "@typescript-eslint/eslint-plugin": "^4.33.0",
        "@typescript-eslint/parser": "^4.33.0",
        "concurrently": "^6.3.0",
        "eslint": "^7.32.0",
        "glob": "^7.1.6",
        "husky": "^7.0.2",
        "mocha": "^10.0.0",
        "npm-check-updates": "^12.0.2",
        "prettier": "2.4.1",
        "rollup": "^2.3.4",
        "rollup-plugin-svelte": "^6.0.0",
        "rollup-plugin-terser": "^7.0.2",
        "svelte": "^3.49.0",
        "svelte-check": "^1.1.23",
        "svelte-preprocess": "^4.6.1",
        "ts-loader": "^9.2.6",
        "typescript": "^4.4.4",
        "vsce": "^1.99.0",
        "vscode-test": "^1.4.1",
        "webpack": "^5.59.1",
        "webpack-cli": "^4.9.1"
    }
}
