{
    "name": "jak-vscode-extension",
    "author": "Jonak Adipta Kalita",
    "license": "MIT",
    "publisher": "JAKVSCodeExtension",
    "displayName": "JAK VSCode Extension",
    "description": "A VSCode Extension made by JAK",
    "icon": "media/logo.png",
    "version": "0.0.8",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Jonak-Adipta-Kalita/JAK-VSCode-Extension.git"
    },
    "engines": {
        "vscode": "^1.46.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:jak-vscode-extension.refreshExtension",
        "onCommand:jak-vscode-extension.openJAKWebsite",
        "onCommand:jak-vscode-extension.openJAKAPI",
        "onCommand:jak-vscode-extension.openJAKDiscordBot",
        "onView:jak-vscode-extension-sidebar"
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "jak-vscode-extension-sidebar",
                    "title": "JAK VSCode Extension",
                    "icon": "media/sidebar/logo.svg"
                }
            ]
        },
        "views": {
            "jak-vscode-extension-sidebar": [
                {
                    "type": "webview",
                    "id": "jak-vscode-extension-sidebar",
                    "name": "JAK VSCode Extension",
                    "icon": "media/sidebar/logo.svg",
                    "contextualTitle": "JAK VSCode Extension"
                }
            ]
        },
        "commands": [
            {
                "command": "jak-vscode-extension.refreshExtension",
                "title": "Refresh JAK VSCode Extension"
            },
            {
                "command": "jak-vscode-extension.openJAKWebsite",
                "title": "Open JAK's Website"
            },
            {
                "command": "jak-vscode-extension.openJAKAPI",
                "title": "Open JAK's API"
            },
            {
                "command": "jak-vscode-extension.openJAKDiscordBot",
                "title": "Open JAK's Discord Bot Invite"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "yarn run package",
        "compile": "webpack --config ./build/node-extension.webpack.config.js",
        "watch": "concurrently \"rollup -c -w\" \"webpack --watch --config ./build/node-extension.webpack.config.js\"",
        "package": "webpack --mode production --devtool hidden-source-map --config ./build/node-extension.webpack.config.js",
        "test-compile": "tsc -p ./",
        "test-watch": "tsc -watch -p ./",
        "pretest": "yarn run test-compile && yarn run lint",
        "publish:vsce": "vsce publish",
        "lint": "eslint .",
        "lint:fix": "eslint --fix .",
        "test": "node ./out/test/runTest.js",
        "prettier": "prettier **/*.{js,ts,md,json}",
        "prettier:fix": "prettier --write **/*.{js,ts,md,json}",
        "prepare": "husky install"
    },
    "bugs": {
        "url": "https://github.com/Jonak-Adipta-Kalita/JAK-VSCode-Extension/issues"
    },
    "homepage": "https://github.com/Jonak-Adipta-Kalita/JAK-VSCode-Extension#readme",
    "devDependencies": {
        "@rollup/plugin-commonjs": "^20.0.0",
        "@rollup/plugin-node-resolve": "^13.0.4",
        "@rollup/plugin-typescript": "^8.2.5",
        "@tsconfig/svelte": "^2.0.1",
        "@types/glob": "^7.1.3",
        "@types/mocha": "^9.0.0",
        "@types/node": "^16.10.3",
        "@types/vscode": "^1.60.0",
        "@typescript-eslint/eslint-plugin": "^4.33.0",
        "@typescript-eslint/parser": "^4.33.0",
        "concurrently": "^6.3.0",
        "eslint": "^7.32.0",
        "glob": "^7.1.6",
        "husky": "^7.0.2",
        "mocha": "^9.1.2",
        "prettier": "2.4.1",
        "rollup": "^2.56.3",
        "rollup-plugin-svelte": "^7.1.0",
        "rollup-plugin-terser": "^7.0.2",
        "svelte": "^3.42.6",
        "svelte-check": "^2.2.6",
        "svelte-preprocess": "^4.9.4",
        "ts-loader": "^9.2.6",
        "typescript": "^4.4.3",
        "vsce": "^1.99.0",
        "vscode-test": "^1.4.1",
        "webpack": "^5.58.0",
        "webpack-cli": "^4.9.0"
    }
}
